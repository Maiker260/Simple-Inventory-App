<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
    <link rel="stylesheet" href="/css/searchPage.css">
    <link rel="stylesheet" href="/css/shared.css">
</head>

<body>
    <div class="main_container flex">
        <header class="main_title_container flex">
            <h1 class="main_title">Search</h1>
        </header>
        <form action="/search" method="get" class="search_form flex">
            <div class="search_bar_container flex">
                <label for="search" class="search_bar_title">
                    Name:
                </label>
                <input type="text" name="search" class="search_bar">
            </div>
            <select name="type" class="type_items_options">
                <option value="anime" selected>Anime</option>
                <option value="manga">Manga</option>
            </select>
            <select name="items" class="type_items_options">
                <option value="1">1</option>
                <option value="5" selected>5</option>
                <option value="10">10</option>
            </select>
            <input type="submit" value="Submit" class="submit_btn">
        </form>
        <main class="results_container flex">
            <h2 class="results_title">Results:</h2>
            <section class="content_container grid">
                <% if (results) { %>
                    <% results.forEach(item => { %>
                        <ul class="item_container flex">
                            <div class="title_image_container">
                                <li id="item-<%= item.node.id %>" class="item_main_title" title="<%= item.node.title %>">
                                    <%= item.node.title %>
                                </li>
                            </div>
                            <div class="item_image_container">
                                <img
                                    src="<%= item.node.main_picture.medium %>"
                                    alt="Cover"
                                    class="item_image"
                                />
                            </div>
                            <button class="add_button" data-series-id="<%= item.node.id %>" data-series-title="<%= item.node.title %>" data-series-type="<%= type %>">
                                Add
                            </button>
                        </ul>
                    <% }); %>
                <% }%>
            </section>
        </main>
    </div>
    <script src="/js/addButtonHandler.js"></script>
</body>

</html>