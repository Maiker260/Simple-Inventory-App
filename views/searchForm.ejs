<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
</head>

<body>
    <h1>Search Series:</h1>
    <form action="/search" method="get">
        <label for="search">
            Search:
            <input type="text" name="search">
        </label>
        <select name="type">
            <option value="anime" selected>anime</option>
            <option value="manga">manga</option>
        </select>
        <select name="items">
            <option value="1">1</option>
            <option value="5">5</option>
            <option value="10">10</option>
        </select>
        <input type="submit" value="Submit">
    </form>
    <h2>Results:</h2>
    <% if (results) { %>
        <ul>
            <% results.forEach(item=> { %>
                <li id="item-<%= item.id %>">
                    <%= item.title %>
                        <img src="<%= item.main_picture.medium %>" alt="image">
                        <button class="add-button" data-series-id="<%= item.id %>" data-series-title="<%= item.title %>"
                            data-series-type="<%= type %>">
                            Add
                        </button>
                </li>
                <% }); %>
                    <% } else { %>

                        <li>No results found</li>
                        <% } %>
        </ul>
        <script src="/js/addButtonHandler.js"></script>
</body>

</html>